<Window x:Class="iTool.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iTool"
        mc:Ignorable="d"
        Title="iTool: User Profile" Height="800" Width="1200" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <Label Content="User Profile" FontSize="30" HorizontalContentAlignment="Center" FontWeight="Bold" Background="#aaaaaa"/>
            <StackPanel Orientation="Horizontal">
                <StackPanel Width="300" Height="720" Background="LightGray" VerticalAlignment="Stretch">
                    <Border Height="200" Width="200" Margin="50 50 50 0" BorderThickness="1" BorderBrush="Black">
                        <Image x:Name="imgUserProfile"/>
                    </Border>
                    <TextBlock x:Name="txbUserID" HorizontalAlignment="Left" Height="20" Margin="50 20 0 0" FontSize="18" FontWeight="Medium"/>
                    <TextBlock x:Name="txbFirstName" HorizontalAlignment="Left" Height="20" Margin="50 0 0 0" FontSize="18" FontWeight="Medium"/>
                    <TextBlock x:Name="txbLastName" HorizontalAlignment="Left" Height="20" Margin="50 0 0 0" FontSize="18" FontWeight="Medium"/>
                    <Button x:Name="btnAddTool" Width="150" Height="30" Content="Add a tool" Margin="10"/>
                    <Button x:Name="btnEditProfile" Width="150" Height="30" Content="Edit profile" Margin="10"/>
                    <Button x:Name="btnDeleteProfile" Width="150" Height="30" Content="Delete profile" Margin="10"/>
                    <Button x:Name="btnBackToMainPage" Width="150" Height="30" Content="Back to main page" Margin="10" Click="BtnBackToMainPage_Click"/>
                    <Button x:Name="btnLogout" Width="150" Height="30" Content="Log out" Margin="10" Click="BtnLogout_Click"/>
                </StackPanel>
                <StackPanel Width="600">
                    <Label Content="My Tools" HorizontalContentAlignment="Center" FontSize="26" FontWeight="Bold" Margin="0 30 0 0"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <DataGrid x:Name="dgMyTools" SelectionChanged="DgMyTools_SelectionChanged"/>
                    </ScrollViewer>
                    <Label Content="My Rented Tools" HorizontalContentAlignment="Center" FontSize="26" FontWeight="Bold" Margin="0 30 0 0"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <DataGrid x:Name="dgRentedToolsByMe" SelectionChanged="DgRentedToolsByMe_SelectionChanged"/>
                    </ScrollViewer>
                </StackPanel>
                <StackPanel Width="300" Background="#e6f2ff">
                    <Label  Margin="30 30 0 0"  Content="Tool" FontSize="26" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Border BorderThickness="1" BorderBrush="Black" Width="200" Height="170" Margin="30 20 0 0" HorizontalAlignment="Left">
                        <Image x:Name="imgToolProfile"/>
                    </Border>
                    <Label Margin="30 20 0 0"  Content="Name: " FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock x:Name="txbToolNameProfile" FontSize="16" Margin="30 0" TextWrapping="Wrap"/>
                    <Label Margin="30 20 0 0"  Content="Conditioin: "  FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock x:Name="txbToolConditionProfile" FontSize="16" Margin="30 0 0 0"/>
                    <Label Margin="30 20 0 0" Content="Price €/day: " FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock x:Name="txbPriceProfile" FontSize="16" Margin="30 0"/>
                    <Label Margin="30 20 0 0" Content="Description: " FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock x:Name="txbDescriptionProfile" FontSize="16" Margin="30 0 0 0" TextWrapping="Wrap"/>
                    <Button x:Name="btnReturnDelete" Height="30" Width="120" HorizontalAlignment="Left" Margin="30 20 0 0" FontSize="16" Click="BtnReturnDelete_Click"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
