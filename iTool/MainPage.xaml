<Window x:Class="iTool.MainPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iTool"
        mc:Ignorable="d"
          Title="iTool: " Height="800" Width="1200" ResizeMode="NoResize">
    <Grid >
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Height="70" Margin="0,0,-6.4,0" VerticalAlignment="Top" Width= "1200" Background="#aaaaaa">
            <Border BorderThickness="1" BorderBrush="Black" Margin="20 5" Cursor="Hand" Height="60" Width="60">
                <Image x:Name="imgMainPageProfile" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Top" MouseLeftButtonUp="ImgMainPageProfile_MouseLeftButtonUp" />
            </Border>
            <TextBlock x:Name="txtUsername" Margin="0" TextWrapping="Wrap" Text="User Name" Width="auto" FontWeight="Bold" FontSize="18" Background="{x:Null}" Foreground="#FF262626"  HorizontalAlignment="Left" VerticalAlignment="Center" Height="26"/>
            <TextBox x:Name="txbSearchBar" Height="30"  Margin="200 0 0 0" TextWrapping="Wrap" Text="Search Tools" Width="250" Foreground="#FF636262" FontSize="16"/>
            <Button x:Name="btnSearchTools" Height="30" Content="Search" FontSize="16" Width="100" Margin="10 0 0 0"/>
        </StackPanel>


        <Grid HorizontalAlignment="Left" Height="700" Margin="0,70,0,0" VerticalAlignment="Top" Width="240" Background="#FFDADADA">

            <TextBlock  Margin="22,44,0,618"  Text="Filters:" Width="192" FontSize="26" Background="{x:Null}" 
                    Foreground="#FF0C0C0C"  HorizontalAlignment="Left" VerticalAlignment="Center" Height="38"/>

            <TextBlock  Margin="22,122,0,548"  Text="City" Width="auto" FontSize="22" Background="{x:Null}" 
                    Foreground="#FF0C0C0C"  HorizontalAlignment="Left" VerticalAlignment="Center" Height="30"/>
            <TextBox x:Name="txbCity" HorizontalAlignment="Left" Height="30"  Margin="22,156,0,514" TextWrapping="Wrap" 
                     Text="City name" VerticalAlignment="Center" Width="192"  Foreground="#FF636262" FontSize="16"/>

            <TextBlock  Margin="22,236,0,434"  Text="Tool" Width="auto" FontSize="22" Background="{x:Null}" 
                    Foreground="#FF0C0C0C"  HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" RenderTransformOrigin="0.504,1.373"/>
            <TextBox x:Name="txbTool" HorizontalAlignment="Left" Height="30"  Margin="22,271,0,399" TextWrapping="Wrap" 
                     Text="Tool name" VerticalAlignment="Center" Width="192"  Foreground="#FF636262" FontSize="16"/>

        </Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <DataGrid x:Name="dgTools" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="700" Margin="240,70,0,0" VerticalAlignment="Top" Width="687" Loaded="dgTools_Loaded"/>
        </ScrollViewer>
        


        <Grid HorizontalAlignment="Left" Height="700" Margin="927,70,-0.4,0" VerticalAlignment="Top" Width="270" Background="#FFDADADA">

            <TextBlock  Margin="22,44,0,618"  Text="Tool Description:" Width="192" FontSize="26" Background="{x:Null}" 
                    Foreground="#FF0C0C0C"  HorizontalAlignment="Left" VerticalAlignment="Center" Height="38"/>

       
            <Image HorizontalAlignment="Left" Height="154" Margin="22,87,0,0" VerticalAlignment="Top" Width="220"/>

            <TextBlock x:Name="txtToolName" Margin="22,276,0,394"  Text="Name: " Width="auto" FontSize="22" Background="{x:Null}" 
                    Foreground="#FF0C0C0C"  HorizontalAlignment="Left" VerticalAlignment="Center" Height="auto"/>
            <TextBlock x:Name="txtToolCondition" Margin="22,348,0,322"  Text="Conditioin: " Width="auto" FontSize="22" Background="{x:Null}" 
                    Foreground="#FF0C0C0C"  HorizontalAlignment="Left" VerticalAlignment="Center" Height="auto"/>
            <TextBlock x:Name="txtPrice" Margin="22,422,0,249"  Text="Price €/day: " Width="auto" FontSize="22" Background="{x:Null}" 
                    Foreground="#FF0C0C0C"  HorizontalAlignment="Left" VerticalAlignment="Center" Height="auto"/>
            
            
            
        </Grid>



    </Grid>
</Window>
